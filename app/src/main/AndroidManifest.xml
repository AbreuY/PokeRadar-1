<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.guipenedo.pokeradar">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MapsActivity"
            android:label="@string/title_activity_maps" />
        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".activities.settings.MainSettingsActivity"
            android:label="Settings"
            android:parentActivityName=".activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MapsActivity" />
        </activity>
        <activity
            android:name=".activities.settings.PokemonFilterSettingsActivity"
            android:label="Settings"
            android:parentActivityName=".activities.settings.MainSettingsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.settings.MainSettingsActivity" />
        </activity>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="a0f86c7b555753a08a4aebe05a5b30dacb601013" />

        <activity
            android:name=".activities.AboutActivity"
            android:label="About"
            android:parentActivityName=".activities.MapsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MapsActivity" />
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <service
            android:name=".FilteredNotifierScan"
            android:enabled="true"
            android:exported="false" />

        <activity
            android:name=".activities.GymDetailsActivity"
            android:label="Gym details"
            android:parentActivityName=".activities.MapsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MapsActivity" />
        </activity>
        <activity android:name=".activities.PokemonDetailsActivity" />
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>